.m_item.menu_subjects
	background #000
	color #fff!important

.header_block.fixed_header
	.header_block_inner
		height 40px
		box-shadow none
	.sub_header_block
		box-shadow 0 2px 8px rgba(204,204,204,0.49)
		.sort_menu_block
			display block
			border-top 1px solid #ccc
			border-bottom 1px solid #ccc
			margin 0 15px

.sub_header_block
	height auto
	position relative
	margin 10px auto 0
	background #fff
	max-width 1310px
	width 100%
	padding-bottom 5px
	.sort_menu_block
		display none
	.header_block_inner
		margin 0
		background transparent
		max-width 1310px

body
	overflow-y scroll
	&.scrolled_page
		.content_block
			.sort_menu_block
				visibility hidden

.content_title_block
	width 100%

.content_block
	margin 0 auto!important
	width 100%
	max-width 100%
	.sort_menu_block
		margin-bottom 40px
		border-bottom 1px solid #ccc

.subject_content_inner
	width 100%
	max-width 1280px
	margin 0 auto


.sort_menu_block
	text-align center
	.technique_sort
		display inline-block
		cursor pointer
		padding 3px 10px
		font 20px/22px 'ma_unitwlight'
		&:hover
			color #fff
			background #c3c3c3
		&.current
			background #b3b3b3
			background #000
			color #fff
	.technique_skip
		font-family 'ma_unitwmedium'


.subject_item
	overflow hidden
	display block
	margin-bottom 10px
	text-decoration none
	width 620px
	max-height 200px
	margin-bottom 30px
	float left
	&:hover
		.subject_title
			color #ee3124
		.subject_image
			filter none
	&:nth-child(2n)
		margin-right 0

.subject_image
	width 240px
	height 220px
	margin-right 20px
	background-position center
	background-repeat no-repeat
	background-size cover
	float left
	background-color #ccc
	filter grayscale(0.7)

.subject_title
	font-size 22px
	margin-bottom 10px
	text-decoration none
	display block

.subject_description
	font 18px/20px 'ma_unitwlight'

.footer_block
	font 14px/16px 'ma_unitwlight'

.footer_sponsors_block
	border-top 1px solid #d7d7d7
	padding 10px 25px 10px


@media screen and (max-width:1280px) {
	.subject_item {
		width: 100%
		margin-right 0
		float none
	}
	.subject_content_inner {
		max-width: 1000px;
	}
}