body
	margin 0
	padding 0
	font 12pt/14pt 'karla'
	font-weight 100


h1, h2, h3, h4, h5
	font-weight normal
	line-height 1em
	margin 0
	padding 0

h2
	padding 30px 0 8px

h3
	padding 20px 0 5px

.header_block
	width 100%
	background #fff
	color #000
	z-index 10
	height 130px

.search_block
	width 100%
	display none
	padding-bottom 5px

.search_input
	display block
	width 100%
	font-size 20pt
	color white
	background-color rgba(0, 0, 0, 0)
	border 0
	margin 0
	padding 0
	outline none
	padding-bottom 5px
	border-bottom 1px solid white

.search_result
	width 100%
	margin-top 10px
	display none
	color white
	a
		color white

.search_context
	display none
	margin-bottom 20px

.context_title
	border 1px solid white
	display inline-block
	padding-left 5px
	padding-right 5px

.context_result
	display block
	text-decoration none
	margin-top 10px
	font 14pt/16pt 'karla'
	&:hover
		color rgb(196, 20, 59)

.header_inner
.search_inner
	width 100%
	padding 40px 0
	margin 0 auto
	overflow hidden
	max-width 950px
	font-size 24px
	font-weight bold

.menu_block
	overflow hidden
	&.left
		float left
		.menu_item_block
			margin-left 15px
			float left
			.menu_item
				display block
				margin-top 4px
				font 12pt/14pt 'karla'
				text-decoration none
				padding-bottom 3px
				&:hover
					color rgb(196, 20, 59)
			.menu_drop
				width 115px
				margin-left -10px
				padding-top 7px
				position absolute
				display none
				.drop_inner
					width 115px
					padding 0 10px 10px 10px
					background-color rgba(0, 0, 0, 0.7)
			&:hover .menu_drop
				display block
	&.right
		display block

.social_block
	margin 0 auto 100px
	text-align center
	width 197px
	a
		color white
		font 25px/25px 'Icons'
		margin-right 5px
		width 25px
		text-decoration none
		&:hover
			color #f00
		&.shutterstock
			width 100px
			background url('/images/design/shuttr.png') 0 -2px no-repeat
			height 15px
			display inline-block
			background-size 100%
			margin-right 0
			margin-left 4px
			&:hover
				background-position 0 -18px
		&.fb
			margin-right 0
			margin-left 4px
		&.inst
			display inline-block
			margin 0 3px
		&.vk
			display inline-block
			margin-right 0

.options_block
	.option
		margin-right 10px
		float left
		display block
		font-size 16px
		&.menu_item
			float right
			margin-right 0
			cursor pointer
			&:hover
				color #f00

.header_logo
	display block
	overflow hidden
	width 115px
	height 32px
	background-size 100%
	margin-top 10px
	color #333
	text-decoration none
	.logo_title
		margin-left 15px
		color white
		text-decoration none
		width 190px
		float left
		font 8pt/10pt 'karla'
	&:hover
		color #f00

.content_columns_block
	overflow hidden
	margin 0 auto
	max-width 950px

.content_column
	box-sizing border-box
	&.main
		overflow hidden
		.content_title
			padding-top 80px
			margin-bottom 40px
			font 36pt/38pt 'karla'
			font-weight 200
		.column_main_inner
			margin-top 0px
	&.scroll
		overflow hidden
		width 320px
		float left
		.content_title
			top 70px
			width 320px
			box-sizing border-box
			padding 10px
			position absolute
			color white
			text-shadow: 1px 1px 2px black
			font 14pt/16pt 'karla'
		.content_scroll_items
			overflow-y scroll
			overflow-x hidden
			width 335px
			height 100%

.content_navigate_block
	overflow hidden
	.navigate_title
		font-size 12pt
		float left
		font-weight bold
		margin-bottom 5px
		margin-top 18px
	.navigate_items_block
		float left
		.navigate_item
			padding-left 4px
			padding-right 4px
			margin-left 5px
			margin-right 11px
			font-size 40pt
			line-height 42pt
			cursor pointer
			margin-bottom 5px
			position relative
			text-transform uppercase
			&:after
				content ''
				position absolute
				left 100%
				font-size 27pt
				top 0px
				background transparent
				padding 0px 3px 0px 10px
				line-height 42pt
				color #f00
				@media screen and (max-width: 1280px)
					height 21px
					line-height 23px
			&:hover
				color #9b9b9b
			&.selected
				color #f00
				&:after
					content 'âœ•'
.footer_block
	font-weight 100
	padding-bottom 4px
	text-align center
	background #fff
	.social_block
		float none
		display block
		text-align center
		a
			float none
			display inline-block
			color #000
	.footer_block_inner
		text-align left
		margin 12px auto 10px