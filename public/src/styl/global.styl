h1, h2, h3, h4, h5
	font-weight normal
	line-height 1em
	margin 0

h1
	padding 35px 0 10px

h2
	padding 30px 0 8px

h3
	padding 20px 0 5px

body
	margin 0
	padding 0
	font 1.2vw/1.4vw 'kamerik_light', 'code_pro_lightregular', Arial, sans
	/*font-family 'kamerik_thin'
	font-family 'kamerik_bold'
	font-family 'kamerik_book'
	font-family 'kamerik_light'*/
	font-weight 200
	overflow hidden
	background #f8f8f8

html, body, .main_block, .content_block, .content_columns_block, .content_column, .column_inner_block
	height 100%

.header_block
	position absolute
	background #f8f8f8
	color #000
	z-index 10
	left 30px
	right 30px
	&.black_header
		background transparent
		color #fff

.search_block
	width 100%
	display none
	padding-bottom 5px

.search_input
	display block
	width 100%
	font-size 20pt
	color white
	background-color rgba(0, 0, 0, 0)
	border 0
	margin 0
	padding 0
	outline none
	padding-bottom 5px
	border-bottom 1px solid white
	font-family 'kamerik_light'

.search_result
	width 100%
	margin-top 10px
	display none
	color white
	a
		color white

.search_context
	display none
	margin-bottom 20px

.context_title
	border 1px solid white
	display inline-block
	padding-left 5px
	padding-right 5px

.context_result
	display block
	text-decoration none
	margin-top 10px
	&:hover
		color rgb(196, 20, 59)

.header_inner
	position relative
	max-width 1310px
	margin 1vw auto 0
	overflow hidden
	//-outline 1px solid #fc0
	@media screen and (max-aspect-ratio: 2/2)
		margin 1.5vh auto
	.header_logo
		font-size 1.4vw
		line-height 1.4vw
		color #000
		text-decoration none
		text-align left
		float left
		display block
		transition-timing-function linear
		transition-duration 0.6s
		transition-property background,color
		font-family 'code_pro_lightregular'
		font-weight bold
		&:hover
			color #f00
		@media screen and (max-aspect-ratio: 2/2)
			font-size 4vh
			line-height 4.2vh

.social_block a {
		color: #fff;
		font: 25px/25px 'Icons';
		text-decoration: none;
		display: block;
}

.social_block a span {
		font: 14pt 'code_pro_lightregular'
}

.social_block a:hover {
		color: #f00
}

.social_block a.fb {
		margin-right: 0
}

.social_block a.inst {
		display: inline-block
}

.social_block a.vk {
		display: inline-block;
		margin-right: 0
}


.options_block
	text-align center
	float right
	.option
		margin-right 10px
		cursor pointer
		display inline-block
		color #000
		text-decoration none
		font-family 'kamerik_light', 'code_pro_lightregular'
		&[href='#']
			cursor default
			color #8c8c8c
		@media screen and (max-aspect-ratio: 2/2)
			font-size 2vh
			line-height 2vh
		&:hover
			color #f00
		&.lang
			color #000
			text-decoration none
			text-transform lowercase
			&:hover
				color #f00
		&.search
			width 25px
			height 25px
			font 25px/25px 'Icons'
			background-size cover
		&.menu_option
			font-family 'menu'
			&:hover
				color #f00

.content_columns_block
	overflow hidden
	margin 0 auto

.content_column
	box-sizing border-box
	&.main
		overflow hidden
		.content_title
			margin-bottom 2vw
			font-size 2.4vw
			line-height 2.7vw
			letter-spacing 0.34vw
			text-align center
			position fixed
			text-transform uppercase
			top 7.7vw
			left 30px
			right 30px
			background #f8f8f8
			z-index 100
			font-family 'code_pro_lightregular'
			@media screen and (max-aspect-ratio: 2/2)
				top 11vh
				margin-bottom 2vh
				font-size 4vh
				line-height 4.2vh
				letter-spacing 0.34vh
		.column_main_inner
			overflow-y hidden
			overflow-x hidden
			height 100%
		.content_outer_block
			margin 0 auto
			width 90vw
			@media screen and (max-aspect-ratio: 2/2)
				/*width 90vh*/
			.content_outer_block_inner
				margin-top 6vw
				position relative
				@media screen and (max-aspect-ratio: 2/2)
					margin-top 6vh
.content_navigate_block
	overflow hidden
	.navigate_title
		font-size 12pt
		float left
		font-weight bold
		margin-bottom 5px
		margin-top 18px
	.navigate_items_block
		float left
		.navigate_item
			padding-left 4px
			padding-right 4px
			margin-left 5px
			margin-right 11px
			font-size 40pt
			line-height 42pt
			cursor pointer
			margin-bottom 5px
			position relative
			text-transform uppercase
			&:after
				content ''
				position absolute
				left 100%
				font-size 27pt
				top 0px
				background transparent
				padding 0px 3px 0px 10px
				line-height 42pt
				color #f00
				@media screen and (max-width: 1280px)
					height 21px
					line-height 23px
			&:hover
				color #9b9b9b
			&.selected
				color #f00
				&:after
					content 'âœ•'
.footer_block
	font 10pt/12pt 'code_pro_lightregular'
	padding-bottom 4px
	text-align center
	position fixed
	bottom 0
	left 0
	right 0
	background #fff
	.social_block
		float none
		display block
		text-align center
		a
			float none
			display inline-block
			color #000
	.footer_block_inner
		width 540px
		margin 12px auto 10px