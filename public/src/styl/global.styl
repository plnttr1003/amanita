*
	outline none

h1, h2, h3, h4, h5
	font-weight normal
	line-height 1em
	margin 0

h1
	padding 35px 0 10px

h2
	padding 30px 0 8px

h3
	padding 20px 0 5px

body
	margin 0
	padding 0
	font 15px/22px 'helvetica', Arial, sans
	font-weight 200
	overflow hidden
	background #f8f8f8
	@media screen and (max-width: 1280px)
		font-size 17px
		line-height 20px

html, body, .main_block, .content_block, .content_columns_block, .content_column, .column_inner_block
	height 100%

.main_block
	min-width 1200px
	width 90vw
	margin 0 auto

.header_block
	background #f8f8f8
	color #000
	z-index 10
	&.black_header
		background transparent
		color #fff

.header_block
.content_block
	display block

.header_block
	width 230px
	position absolute
	top 0
	left 0
	bottom 0

.content_block
	position absolute
	top 0
	left 230px
	right 0
	bottom 0
	background #ccc
	background #fff

.search_block
	width 100%
	display none
	padding-bottom 5px

.search_input
	display block
	width 100%
	font-size 20pt
	color white
	background-color rgba(0, 0, 0, 0)
	border 0
	margin 0
	padding 0
	outline none
	padding-bottom 5px
	border-bottom 1px solid white

.search_result
	width 100%
	margin-top 10px
	display none
	color white
	a
		color white

.search_context
	display none
	margin-bottom 20px

.context_title
	border 1px solid white
	display inline-block
	padding-left 5px
	padding-right 5px

.context_result
	display block
	text-decoration none
	margin-top 10px
	&:hover
		color rgb(196, 20, 59)

.header_inner
	position relative
	margin-top 30px
	overflow hidden
	margin-left 30px
	margin-right 30px
	@media screen and (max-aspect-ratio: 2/2)
		margin 1.5vh auto
	.header_logo
		font-size 25px
		line-height 25px
		color #000
		text-decoration none
		text-align left
		display block
		transition-timing-function linear
		transition-duration 0.6s
		transition-property background,color
		font-family 'helvetica'
		&:before
			display block
			content ''
			width 180px
			height 180px
			background url(/images/design/contacts/amanita.png) 50% no-repeat
			background-size 130px
			transition-timing-function linear
			transition-duration 0.6s
			transition-property opacity
			filter grayscale(0.4)
			opacity 0.7
		@media screen and (max-width: 1280px)
			font-size 17px
			line-height 17px
		&:hover
			color #f00
			&:before
				opacity 1
		@media screen and (max-aspect-ratio: 2/2)
			font-size 4vh
			line-height 4.2vh
			float none
			text-align center

.social_block
	border-top 1px solid #000
	margin-right 10px
	margin-top 10px
	padding-top 10px
	a
		color #000
		font 25px/25px 'Icons'
		text-decoration none
		&:hover
			color #f00

.screen_block
	height 100%
	&.press_block
		position absolute
		overflow-y auto
		width 100%
		background rgba(0,0,0,0.85)
		color #fff
		z-index 200
		top 0
		bottom 0
		.press_block_inner
			overflow-y visible
			width 80vw
			max-width 700px
			margin 63px auto 0

.options_block
	margin-top 10px
	width 100px
	.option
		margin-right 10px
		cursor pointer
		color #000
		text-decoration none
		font-family 'helvetica'
		display block
		&[href='#']
			cursor default
			color #8c8c8c
			&:hover
				color #8c8c8c
		@media screen and (max-aspect-ratio: 2/2)
			font-size 2vh
			line-height 2vh
		&:hover
			color #f00
		&.option_contacts
			color #000
			text-decoration none
			text-transform lowercase
			border-top 1px solid #000
			margin-top 10px
			padding-top 10px
			display block
			text-decoration underline
			&:hover
				color #f00
		&.search
			width 25px
			height 25px
			font 25px/25px 'Icons'
			background-size cover
		&.menu_option
			font-family 'menu'
			&:hover
				color #f00

.content_columns_block
	overflow hidden
	margin 0 auto
	background url(/images/design/gr.png) 0 0 repeat-y

.content_column
	box-sizing border-box
	&.main
		overflow hidden
		.content_title
			margin-bottom 2vw
			font-size 2.4vw
			line-height 2.7vw
			letter-spacing 0.34vw
			text-align center
			position fixed
			text-transform uppercase
			top 7.7vw
			left 30px
			right 30px
			background #f8f8f8
			z-index 100
			font-family 'helvetica'
			@media screen and (max-aspect-ratio: 2/2)
				top 11vh
				margin-bottom 2vh
				font-size 4vh
				line-height 4.2vh
				letter-spacing 0.34vh
		.column_main_inner
			overflow-y hidden
			overflow-x hidden
			height 100%
		.content_outer_block
			margin 0 auto
			//-width 90vw
			.content_outer_block_inner
				margin-top 6vw
				position relative
.content_navigate_block
	overflow hidden
	.navigate_title
		font-size 12pt
		float left
		font-weight bold
		margin-bottom 5px
		margin-top 18px
	.navigate_items_block
		float left
		.navigate_item
			padding-left 4px
			padding-right 4px
			margin-left 5px
			margin-right 11px
			font-size 40pt
			line-height 42pt
			cursor pointer
			margin-bottom 5px
			position relative
			text-transform uppercase
			&:after
				content ''
				position absolute
				left 100%
				font-size 27pt
				top 0px
				background transparent
				padding 0px 3px 0px 10px
				line-height 42pt
				color #f00
				@media screen and (max-width: 1280px)
					height 21px
					line-height 23px
			&:hover
				color #9b9b9b
			&.selected
				color #f00
				&:after
					content 'âœ•'
.footer_block
	font 10pt/12pt 'helvetica'
	padding-bottom 4px
	text-align center
	position fixed
	bottom 0
	left 0
	right 0
	background #fff
	.footer_block_inner
		width 540px
		margin 12px auto 10px

.goto_down a
	position fixed
	bottom 0
	color #fff
	text-align center
	width 100%
	font-size 30px
	line-height 60px
	top 0
	left 0
	right 0
	z-index -1
	cursor pointer
	&:after
		position fixed
		content ''
		top 40px
		right 40px
		background-color #fc0
		width 30px
		height 30px
		background url("/images/design/cross.png") 0 0 no-repeat
		background-size 60px
	&:hover
		&:after
			opacity 0.8

.banner_block
	width 100%
	margin 20px 0
	display block
	img
		width 100%
		height auto
		display block