.content_item
	height 280px
	box-sizing border-box
	padding-left 30px
	.item_image
		width 160px
		height 160px
		border-radius 50%
		background-position 50%
		background-size cover
		background-repeat no-repeat
		overflow hidden
	.item_title
		font-weight bold
		margin-top 15px
	&:first-child
		width 460px
		height 580px
		background-position 0 0
		background-repeat no-repeat
		padding-left 0
		.item_image
			width 460px
			height 465px
			background-size 460px
			background-position 50% 0
		.item_description
			background transparent
			bottom 0px
			width 460px
			text-align center
			text-shadow none
			margin-left 0
			.item_title
				font-weight bold
				margin-top 15px
				font 19pt/18pt 'PT Serif'
				color #000
				text-shadow none
				text-align center
				width 235px
				margin 0 auto
				font-weight bold
			.item_type
				font-size 13pt
				margin-top 15px

	.item_description
		font 12pt/14pt 'PT Serif'
		.item_type
			font 10pt/12pt 'PT Sans'
			color #969696
			margin-top 5px


.content_column.scroll
	.content_scroll_items
		box-sizing border-box
		background #ededed
		// height auto
		padding-top 160px
		padding-bottom 146px

.people_info
	margin 20px auto 0
	font 12pt/14pt 'PT Serif'
	width 250px
	.people_email
		a
			color #000
			&:hover
				color #888
.people_name
	margin-bottom 5px
	margin-top 20px
	font 12pt/14pt 'PT Serif'
	font-weight bold

.people_type
	margin-bottom 5px
	font 10pt/10pt 'PT Sans'
	color #969696
