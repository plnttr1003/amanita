.content_partners_description
	a
		color #555
		&:hover
			color #888

.content_outer_block
	margin-top 20px

.content_item
	color black
	text-decoration none
	box-sizing border-box
	width 100%
	border-top 1px solid #B8B8B8
	padding 10px 0
	background-color white
	min-height 150px
	position relative
	margin-bottom 0
	.item_image
		height 120px
		width 200px
		float left
		background-size contain
		background-repeat no-repeat
		background-position 50%
		position absolute
		top 50%
		margin-top -60px
		left 70px
		display block
	a.item_image
		&:hover
			opacity 0.8
	.item_description
		margin-left 340px
		background transparent
		.item_title
			font-weight bold
			display block
			margin-bottom 10px
		.item_type
			margin-bottom 10px
			a
				color #555
				&:hover
					color #888
		.item_url
			display block
			color #555
			&:hover
				color #888
