.content_column.main
	.column_main_inner
		overflow-y scroll

.screen_block
	height 100%
	&.info_block
		width 100%
		position absolute
		overflow hidden
		z-index 200
		background rgba(0,0,0,0.85)
		display none
		.info_block_inner
			width 700px
			position absolute
			top 200px
			bottom 0
			left 50%
			margin-left -350px
			overflow hidden
			.content_navigate_block
				color #fff
				padding-right 40px
				overflow-y scroll
				width 100%
				height 100%
	&.intro_block
		width 100%
		position absolute
		overflow-y scroll
		cursor pointer
		z-index 2000
		background #000
		.intro_block_background
			height 100%
			background-size cover
			background-position 50%
			background-repeat no-repeat
			height 101%
			filter blur(10px)
		.intro_block_inner
			width 100%
			display table
			height 100%
			position absolute
			top 0
			.intro_block_image
				height 100%
				display table-cell
				vertical-align middle
				text-align center
				background rgba(0, 0, 0, 0.69)
				img
					width 378px
	&.about_block
		position absolute
		overflow-y auto
		width 100%
		background rgba(0,0,0,0.85)
		color #fff
		display none
		z-index 200
		.about_block_inner
			overflow-y visible
			width 700px
			margin 63px auto 0
			.about_block_image
				background #fff
				width 280px
				height 280px
				margin 0 auto 50px
				img
					padding 10px
					display block
					width 260px
					height 260px
		.about_text_inner
			font 14pt/17pt 'code_pro_lightregular'
			p
				text-align justify
		.form_block
			width 600px;
			border 1px solid
			margin 40px auto 0
			height 230px
			margin-bottom 20px
			background rgba(208, 208, 208, 0.2)
			display block
			font 12pt/14pt 'code_pro_lightregular'
			color #fff
			padding 5px
	&.contacts_block
		position absolute
		width 100%
		background rgba(0,0,0,0.85)
		color #fff
		display none
		z-index 200
		.about_block_inner
			overflow-y visible
			width 700px
			margin 63px auto 0
			.about_block_image
				img
					margin 0 auto
					display block
					width 240px
					margin-bottom 55px
		.about_text_inner
			font 17pt/20pt 'code_pro_lightregular'
			p
				text-align center
				margin 0 0 10px
				padding 0
				a
					color #fff
					&:hover
						color #f00
		.form_block
			width 600px;
			border 1px solid
			margin 40px auto 0
			margin-bottom 20px
			background rgba(208, 208, 208, 0.2)
			display block
			font 12pt/14pt 'code_pro_lightregular'
			color #fff
			padding 5px
			&:focus
				border-color #f00
				outline none
		textarea
			height 230px
		input
			height 40px
.goto_down a
	position fixed
	bottom 0
	color #fff
	text-align center
	width 100%
	font-size 30px
	line-height 60px
	top 0
	left 0
	right 0
	z-index -1
	cursor pointer
	&:after
		position fixed
		content ''
		top 40px
		right 40px
		background-color #fc0
		width 30px
		height 30px
		background url("/images/design/cross.png") 0 0 no-repeat
		background-size 60px
	&:hover
		&:after
			opacity 0.8

#description
	display none

.content_scroll_items
	margin 0 auto
	max-width 90vmax
	display none

.item_fancy
	display block
	width 29%
	height 31vmax
	overflow hidden
	margin-left 2%
	margin-right 2%
	margin-bottom 2vmin
	background-size cover
	background-position 50%
	background-repeat no-repeat
	&.text
		display inline-block
		margin 0
		width auto
		height auto
		font-family 'menu'
		color #fff
		text-decoration none
		margin-left 20px
		border-bottom 3px solid #000
		border-top 3px solid #000
		position relative
		height 29px
		width 40px
		&:after
			position absolute
			content ''
			display block
			top 50%
			width 100%
			margin-top -1.5px
			height 3px
			background #000
	&:hover
		opacity 0.5

.content_slider_items
.content_arrow_items
	position absolute
	top 11vmax
	bottom 3vmax
	left 0
	right 0
	overflow hidden
	.right
	.left
		position absolute
		top 0
		width 10vmax
		height 100%
		z-index 100
		cursor pointer
		&:after
			display block
			content ''
			position absolute
			top 50%
			height 2vmax
			width 2vmax
			margin-top -1vmax
			transform rotate(45deg)
			transform-origin 50%
			z-index 100
			transition-timing-function linear
			transition-duration .3s
			transition-property border-color
		&.right
			right 0
			&:after
				right 2vmax
				border-right 1px solid #000
				border-top 1px solid #000
		&.left
			left 0
			&:after
				left 2vmax
				border-left 1px solid #000
				border-bottom 1px solid #000
		&:hover
			&:after
				border-color #f00
	@media screen and (max-aspect-ratio: 2/2)
		top 11vmin
		bottom 3vmin
	.item_slider
		height 100%
		left 0
		right 0
		top 0
		position absolute
		overflow hidden
		opacity 0
		z-index -10
		transition-property opacity
		transition-duration 0.5s
		transition-timing-function ease-in-out
		&:nth-child(1)
			opacity 1
			z-index 10
		.item_image
			position relative
			background-size contain
			background-position 50%
			background-repeat no-repeat
			height 90%
			width 90vmax
			margin 0 auto
			@media screen and (max-aspect-ratio: 2/2)
				width 90vmin
		.item_description
			position absolute
			top 92%
			text-align center
			width 100%