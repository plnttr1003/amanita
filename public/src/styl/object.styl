.images_navigate_block_inner
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	overflow hidden
	&>div
		position absolute
		top 0
		width 10vw
		height 100%
		z-index 100
		cursor pointer
		@media screen and (max-aspect-ratio: 2/2)
			width 10vh
		&.images_zoom
			left 50%
			top 50%
			width 12vw
			height 12vw
			margin-left -6vw
			margin-top -6vw
			opacity 0
			@media screen and (max-aspect-ratio: 2/2)
				width 12vh
				height 12vh
				margin-left -6vh
				margin-top -6vh
			&:hover
				opacity 1
			&:after
				content '+'
				width 4vw
				height 4vw
				border-radius 50%
				border 1px solid #000
				line-height 4.3vw
				font-size 5vw
				transform none
				text-align center
				left 50%
				margin-left -2vw
				margin-top -2vw
				@media screen and (max-aspect-ratio: 2/2)
					width 4vh
					height 4vh
					line-height 4.3vh
					font-size 5vh
					margin-left -2vh
					margin-top -2vh
		&:after
			display block
			content ''
			position absolute
			top 50%
			height 2vw
			width 2vw
			margin-top -1vw
			transform rotate(45deg)
			transform-origin 50%
			z-index 100
			transition-timing-function linear
			transition-duration .3s
			transition-property border-color, color
			@media screen and (max-aspect-ratio: 2/2)
				height 2vh
				width 2vh
				margin-top -1vh
		&.images_navigate_block_next
			right 0
			&:after
				right 2vw
				border-right 1px solid #000
				border-top 1px solid #000
				@media screen and (max-aspect-ratio: 2/2)
					right 2vh
		&.images_navigate_block_prev
			left 0
			&:after
				left 2vw
				border-left 1px solid #000
				border-bottom 1px solid #000
				@media screen and (max-aspect-ratio: 2/2)
					left 2vh
		&:hover
			&:after
				border-color #f00
				color #f00

